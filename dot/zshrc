# Zsh configuration
setopt EXTENDED_HISTORY # Record timestamp of command in HISTFILE
setopt HIST_IGNORE_ALL_DUPS # Remove older command from the history if a duplicate is to be added.
setopt SHARE_HISTORY # Share history between all zsh sessions
setopt INC_APPEND_HISTORY # Write to history immediately, not on exit
setopt HIST_EXPIRE_DUPS_FIRST # Expire duplicates first when trimming
setopt HIST_FIND_NO_DUPS # Don't show duplicates when searching
setopt HIST_REDUCE_BLANKS # Remove extra blanks before recording
HISTSIZE=50000 # Increase history size
SAVEHIST=50000 # Save 50k lines to disk
HISTORY_IGNORE="(ls|cd|cd ..|pwd|z|z *|exit|clear|history|.n|.z|.x|.rc|.w|.m|.ml|.gc|.gcl|.gi|.me|.p|.t|.v|.zm|.bin|.dot|gs|gl|gd|gss|gsi|gbr|gbrn|ll|la|lla|tree|which|lookup|lu|tml)" # Don't save these commands to history file
bindkey -e # Set editor default keymap to emacs (`-e`) or vi (`-v`)
setopt CORRECT # Prompt for spelling correction of commands.
SPROMPT='zsh: correct %F{red}%R%f to %F{green}%r%f [nyae]? ' # Customize spelling correction prompt.
WORDCHARS='*?_[]~=&;!#$%^(){}<>' # More aggressive word boundaries for finer navigation

# Add Homebrew completions to FPATH
if [[ -d /opt/homebrew/share/zsh/site-functions ]]; then
    FPATH="/opt/homebrew/share/zsh/site-functions:${FPATH}"
fi

# Zim configuration
ZIM_CONFIG_FILE="$HOME/.config/zim/zimrc"
ZIM_HOME="$HOME/.cache/zim"
zstyle ':zim:zmodule' use 'degit' # Use degit instead of git as the default tool to install and update modules.
zstyle ':zim' disable-version-check yes
zstyle ':zim:input' double-dot-expand yes # Append `../` to your input for each `.` you type after an initial `..`
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor) # See https://github.com/zsh-users/zsh-syntax-highlighting/blob/master/docs/highlighters.md

# Auto-Install zimfw plugin manager if missing.
if [[ ! -e ${ZIM_HOME}/zimfw.zsh ]]; then
  curl -fsSL --create-dirs -o ${ZIM_HOME}/zimfw.zsh https://github.com/zimfw/zimfw/releases/latest/download/zimfw.zsh
fi

# Install missing modules and update ${ZIM_HOME}/init.zsh if missing or outdated.
if [[ ! ${ZIM_HOME}/init.zsh -nt ${ZIM_CONFIG_FILE:-${ZDOTDIR:-${HOME}}/.zimrc} ]]; then
  source ${ZIM_HOME}/zimfw.zsh init -q
fi

source ${ZIM_HOME}/init.zsh

# Post-init module configuration

ZSH_AUTOSUGGEST_STRATEGY=(history)  # Match history-substring-search behavior
ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=20  # Don't suggest for long commands
ZSH_AUTOSUGGEST_MANUAL_REBIND=1     # Faster performance
ZSH_AUTOSUGGEST_HISTORY_IGNORE="?(#c100,)"  # Ignore very long commands from history suggestions
# Bind ^[[A/^[[B manually so up/down works both before and after zle-line-init
bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down

# Bind focus event escape sequences to do nothing (prevents printing when switching windows)
bindkey '\e[I' ignore-key  # Focus gained
bindkey '\e[O' ignore-key  # Focus lost

# Define ignore-key widget if it doesn't exist
if ! (( ${+widgets[ignore-key]} )); then
    zle -N ignore-key
    function ignore-key() { }
fi

# Bind up and down keys
zmodload -F zsh/terminfo +p:terminfo
if [[ -n ${terminfo[kcuu1]} && -n ${terminfo[kcud1]} ]]; then
  bindkey ${terminfo[kcuu1]} history-substring-search-up
  bindkey ${terminfo[kcud1]} history-substring-search-down
fi

bindkey '^P' history-substring-search-up
bindkey '^N' history-substring-search-down
bindkey -M vicmd 'k' history-substring-search-up
bindkey -M vicmd 'j' history-substring-search-down

# Load p10k config (to customize, run `p10k configure` or edit ~/.p10k.zsh)
[[ -f ~/.p10k.zsh ]] && source ~/.p10k.zsh

# Initialize zoxide
if command -v zoxide >/dev/null 2>&1; then
    eval "$(zoxide init zsh)"
fi
