# EXPORTS
if [ -z "$(which nvim 2>/dev/null)" ]; then export EDITOR="vim"; else export EDITOR="nvim"; fi
export GREP_OPTIONS=
export _MY_RC_DIR="$(dirname $(readlink ~/.vimrc))"
export _MY_BIN_DIR=$(realpath ${_MY_RC_DIR}/../bin)
export PATH=$PATH:$_MY_BIN_DIR

# ALIASES
alias ls='ls --color=auto -CF'
alias ll='ls -lFht'
alias la='ls -a'
alias lla='ls -lFhta'
alias lr='ls -R'
alias l.='ls -d .*'
alias ll.='ls -lFhtd .*'

if [ -z "$(which nvim 2>/dev/null)" ]; then alias vi='vim'; else alias vi='nvim'; fi
alias .v='vi ~/.vimrc'
alias .m='vi ~/.myshrc'
alias .z='vi ~/.zshrc'
alias .t='vi ~/.tmux.conf'
alias ..t='tmux source-file ~/.tmux.conf'
alias .rc='cd ${_MY_RC_DIR}'

alias x='exit'
alias wget='wget -c'
alias grep='grep --color=auto --exclude-dir=.cvs --exclude-dir=.git --exclude-dir=.hg --exclude-dir=.svn'
alias pgrep='ps aux | grep -v grep | grep -i -e VSZ -e'

alias scpnoverify='scp -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no'
alias sshnoverify='ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no'

alias ga='git add'
alias gl='git log --oneline --decorate --date=short --graph -10'
alias gs='git status'
alias gd='git diff'
alias gdt='git difftool'
alias gdc='git diff --cached'
alias gdn='git diff --relative --name-only'
alias gdns='git diff --relative --name-status'
alias gcm='git commit -m'
alias gcma='git commit -am'
alias gwta='git worktree add'
alias gwtp='git worktree prune'
alias gwtl='git worktree list'
alias gco='git checkout'
alias gbr='git branch'
alias gpl='git pull'
alias gps='git push'
alias gcp='git cherry-pick'
alias gf='git fetch'

alias ff='find -type f -name'

alias tml='tmux ls'
alias tma='tmux attach -t'
alias tmn='tmux new -s'

gri () { 
    if [ -z "${1}" ]; then
        echo "Usage: gri <number of commits>" 
        return
    fi
    git rebase -i @~"${1}"
}
