    export MANPAGER='nvim +Man!'
fi

if [ -n "$(command -v neovide)" ]; then
    nv() {
        if ! command -v neovide >/dev/null 2>&1; then
            echo "Error: neovide not found" >&2
            return 1
        fi
        nohup neovide "$@" &>/dev/null &
    }

    nvr() {
        if [ -z "$1" ]; then
            echo "Usage: nvr <remote_host> [files...]" >&2
            return 1
        fi

        if ! command -v neovide >/dev/null 2>&1; then
            echo "Error: neovide not found" >&2
            return 1
        fi

        # Create unique script with PID to avoid conflicts
        local script="/tmp/nvd.$1.$$"
        trap "rm -f '$script'" EXIT INT TERM

        cat > "$script" << 'EOF'
#!/bin/bash
ssh "$1" -- PATH=$PATH:/home/linuxbrew/.linuxbrew/bin nvim "$@"
EOF
        chmod 700 "$script"
        nohup neovide --neovim-bin="$script" "$@" &>/dev/null &
    }
fi

