if [[ $(uname) == "Darwin" ]]; then
    export PATH=/opt/homebrew/bin/:$PATH
elif [[ -d /home/linuxbrew/ ]]; then
    export PATH=/home/linuxbrew/.linuxbrew/bin/:$PATH
elif [[ -d ~/.linuxbrew/ ]]; then
    export PATH=~/.linuxbrew/bin/:$PATH
fi

