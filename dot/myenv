gri() {
    if [ -z "$1" ]; then
        echo "Usage: gri <number_of_commits>" >&2
        return 1
    fi

    # Validate input is a positive integer
    if ! [[ "$1" =~ ^[0-9]+$ ]]; then
        echo "Error: Argument must be a positive integer" >&2
        return 1
    fi

    # Check if in a git repository
    if ! git rev-parse --git-dir >/dev/null 2>&1; then
        echo "Error: Not in a git repository" >&2
        return 1
    fi

    # Check if we have enough commits
    local commit_count=$(git rev-list --count HEAD 2>/dev/null)
    if [ "$1" -gt "$commit_count" ]; then
        echo "Error: Only $commit_count commits in history" >&2
        return 1
    fi

    git rebase -i @~"$1"
}

tm() {
    if [ -z "$1" ]; then
        echo "Usage: tm <session_name>" >&2
        return 1
    fi

    # Check if tmux is available
    if ! command -v tmux >/dev/null 2>&1; then
        echo "Error: tmux not found" >&2
        return 1
    fi

    # Validate session name (no colons or periods which tmux doesn't allow)
    if [[ "$1" =~ [:\.] ]]; then
        echo "Error: Session name cannot contain ':' or '.'" >&2
        return 1
    fi

    tmux new -A -s "$1"
    echo "Detached from tmux session: $1"
}

frg() {
    # Check dependencies
    if ! command -v rg >/dev/null 2>&1; then
        echo "Error: ripgrep (rg) not found" >&2
        return 1
    fi
    if ! command -v fzf >/dev/null 2>&1; then
        echo "Error: fzf not found" >&2
        return 1
    fi

    rg -n "$@" | fzf \
        --delimiter : \
        --preview 'bat --style=full --color=always --highlight-line {2} {1} 2>/dev/null || cat {1}' \
        --preview-window '~3,+{2}+3/2' \
        --multi --bind 'ctrl-space:select'
}

frgv() {
    # Check dependencies
    if ! command -v rg >/dev/null 2>&1; then
        echo "Error: ripgrep (rg) not found" >&2
        return 1
    fi

    local lines
    lines=$(frg "$@")

    if [ -z "$lines" ]; then
        echo "No results found" >&2
        return 0
    fi

    # Build nvim command with proper quoting
    local -a files
    while IFS=: read -r file line_num rest; do
        files+=("$file" "+$line_num")
    done <<< "$lines"

    if [ ${#files[@]} -gt 0 ]; then
        "$EDITOR" "${files[@]}"
    fi
}

wezcopy() {
  local content
  if [[ ! -t 0 ]]; then
    # stdin is piped
    content=$(command cat)
  elif [[ $# -gt 0 ]]; then
    content="$*"
  else
    echo "Usage: wezcopy <text> OR command | wezcopy" >&2
    return 1
  fi
  # Use -w 0 on Linux to disable line wrapping (macOS base64 doesn't support -w)
  local encoded
  encoded=$(printf '%s' "$content" | base64 -w 0 2>/dev/null || printf '%s' "$content" | base64)
  # Wrap in tmux passthrough if inside tmux
  if [[ -n "$TMUX" ]]; then
    printf '\033Ptmux;\033\033]1337;SetUserVar=%s=%s\007\033\\' "to_clipboard" "$encoded"
  else
    printf '\033]1337;SetUserVar=%s=%s\007' "to_clipboard" "$encoded"
  fi
}

